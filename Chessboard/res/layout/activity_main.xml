<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wangcan.chessboard.MainActivity" >
	
   <EditText 
       android:id="@+id/size"
       android:hint="请输入大小(需是2的幂)"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

   <EditText
       android:id="@+id/yposition"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/xposition"
       android:layout_below="@+id/xposition"
       android:layout_marginTop="50dp"
       android:ems="10"
       android:hint="请输入纵坐标" />

   <EditText
       android:id="@+id/xposition"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/size"
       android:layout_below="@+id/size"
       android:layout_marginTop="34dp"
       android:ems="10"
       android:hint="请输入横坐标" >

       <requestFocus />
   </EditText>

   <Button
       android:id="@+id/start"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/yposition"
       android:layout_below="@+id/yposition"
       android:layout_marginLeft="54dp"
       android:layout_marginTop="64dp"
       android:text="执行" />

</RelativeLayout>
